@model vidly.Viewmodels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Birthdate">Date of Birth</label>
        @Html.TextBoxFor(m => m.Customer.Birthdate, "{0: d-MM-yyyy }", new { @class = "form-control" })
    </div>



    <div class="form-group">
        <label for="MembershipTypeId">Membership Type</label>
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "MembershipName"), "", new { @class = "form-control" })
    </div>

    <div class=" checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsPaper) Subscribed to NewsLetter?
        </label>

    </div>
    @Html.HiddenFor(m => m.Customer.Id)
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

}

